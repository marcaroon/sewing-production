// Bundle Model (unchanged)
model Bundle {
  id              String   @id @default(cuid())
  bundleNumber    String   @unique
  orderId         String
  size            String
  quantity        Int
  currentLocation String
  currentStatus   String
  order           Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
